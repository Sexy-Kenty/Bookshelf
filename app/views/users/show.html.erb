<div class="user-profile">
  <div class="icon text-center">
    <img src="
<%= gravatar_url(@user, size: 100) %>
" alt="" class="img-circle">
  </div>
  <div class="name text-center">
    <h1><%= @user.name %></h1>
    <div>
    <%= render 'relationships/follow_button', user: @user %>
    </div>
  </div>

  <div class="status text-center">
    <ul>
      <li>
        <div class="status-label"><%= link_to followings_user_path(@user) do %>フォロー<% end %></div>
        <div id="followings_count" class="status-value">
          <%= @count_followings %>
        </div>
      </li>

      <li>
        <div class="status-label"><%= link_to followers_user_path(@user) do %>フォロワー<% end %></div>
        <div id="followers_count" class="status-value">

          <%= @count_followers %>

        </div>
      </li>
  </div>

  <div class="status text-center">
    <ul>
      <li>
        <div class="status-label">蔵書数</div>
        <div id="have_count" class="status-value">
          
<%= @count_have %>

        </div>
      </li>


      <li>
        <div class="status-label">読みたい本</div>
        <div id="want_count" class="status-value">
          
<%= @count_want %>

        </div>
      </li>
     
    </ul>
  </div>
</div>
<%= render 'items/items', items: @items %>

